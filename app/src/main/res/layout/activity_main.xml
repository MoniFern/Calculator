<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical">


    <TextView
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:background="#000000"
        android:hint="0"
        android:maxLength="5"
        android:padding="10dp"
        android:textColor="#F7FCF7"
        android:textColorHint="#F7FCF7"
        android:textSize="50dp"
        android:textAlignment="textEnd"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/sign"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:background="#000000"
        android:hint="0"
        android:maxLength="15"
        android:padding="10dp"
        android:textColor="#F7FCF7"
        android:textColorHint="#F7FCF7"
        android:textSize="50dp"
        android:textAlignment="textEnd"
        tools:ignore="RtlCompat" />
</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="5">

        <Button
            android:id="@+id/b7"
            android:layout_width="102dp"
            android:layout_height="100dp"
            android:background="#000000"
            android:onClick="Click_7"
            android:text="7"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="30dp" />

        <Button
            android:id="@+id/b4"
            android:layout_width="102dp"
            android:layout_height="100dp"
            android:background="#000000"
            android:onClick="Click_4"
            android:padding="2dp"
            android:text="4"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="30dp" />


        <Button
            android:id="@+id/b1"
            android:layout_width="102dp"
            android:layout_height="100dp"
            android:background="#000000"
            android:onClick="Click_1"
            android:padding="2dp"
            android:text="1"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="30dp" />

        <Button
            android:id="@+id/dot"
            android:layout_width="104dp"
            android:layout_height="100dp"
            android:background="#FF8C00"
            android:onClick="dot"
            android:padding="2dp"
            android:text="."
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="50dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/b8"
            android:layout_width="102dp"
            android:layout_height="100dp"
            android:background="#000000"
            android:onClick="Click_8"
            android:text="8"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="30dp" />

        <Button
            android:id="@+id/b5"
            android:layout_width="102dp"
            android:layout_height="100dp"
            android:background="#000000"
            android:onClick="Click_5"
            android:text="5"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="30dp" />

        <Button
            android:id="@+id/b2"
            android:layout_width="102dp"
            android:layout_height="100dp"
            android:background="#000000"
            android:onClick="Click_2"
            android:padding="2dp"
            android:text="2"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="30dp" />

        <Button
            android:id="@+id/b0"
            android:layout_width="104dp"
            android:layout_height="100dp"
            android:background="#000000"
            android:onClick="Click_0"
            android:padding="2dp"
            android:text="0"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="30dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/b9"
            android:layout_width="102dp"
            android:layout_height="100dp"
            android:background="#000000"
            android:onClick="Click_9"
            android:text="9"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="30dp" />

        <Button
            android:id="@+id/b6"
            android:layout_width="102dp"
            android:layout_height="100dp"
            android:background="#000000"
            android:onClick="Click_6"
            android:text="6"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="30dp" />

        <Button
            android:id="@+id/b3"
            android:layout_width="102dp"
            android:layout_height="100dp"
            android:background="#000000"
            android:onClick="Click_3"
            android:padding="2dp"
            android:text="3"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="30dp" />

        <Button
            android:id="@+id/del"
            android:layout_width="104dp"
            android:layout_height="100dp"
            android:background="#FF8C00"
            android:onClick="delete"
            android:padding="2dp"
            android:text="DEL"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="30dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="110dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/div"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:background="#FF8C00"
            android:onClick="div"
            android:text="/"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="40dp" />

        <Button
            android:id="@+id/multi"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:background="#FF8C00"
            android:onClick="multi"
            android:text="*"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="40dp" />

        <Button
            android:id="@+id/subst"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:background="#FF8C00"
            android:onClick="subst"
            android:padding="2dp"
            android:text="-"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="40dp" />

        <Button
            android:id="@+id/plus"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:background="#FF8C00"
            android:onClick="plus"
            android:padding="2dp"
            android:text="+"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="40dp" />

        <Button
            android:id="@+id/equ"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:background="#FF8C00"
            android:onClick="equal"
            android:padding="2dp"
            android:text="="
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="40dp" />

    </LinearLayout>
</LinearLayout>
</LinearLayout>